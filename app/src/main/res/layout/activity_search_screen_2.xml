<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".SearchScreen2">


    <EditText
        android:id="@+id/search_bar2"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_marginTop="77dp"
        android:drawableStart="@drawable/ic_action_search"
        android:drawableLeft="@drawable/ic_action_search"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/search"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:imeOptions="actionDone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchScreen2Logo" />

    <ImageView
        android:id="@+id/searchScreen2Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whatsthewordlogo" />

    <TextView
        android:id="@+id/definitionBox2"
        android:layout_width="367dp"
        android:layout_height="128dp"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="191dp"
        android:layout_marginRight="191dp"
        android:gravity="center_horizontal"
        android:hint="@string/definition"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar2" />

    <Button
        android:id="@+id/search2ClearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginBottom="129dp"
        android:text="Clear"
        android:background="@drawable/roundedbutton"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/definitionBox2" />
</androidx.constraintlayout.widget.ConstraintLayout>